package com.doku.frames.SocketTest;

import java.io.*;
import java.net.*;
import javax.swing.*;

public class ServerFrame extends JFrame {
    private JTextArea textArea;

    public ServerFrame() {
        setTitle("Server");
        setSize(400, 300);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        textArea = new JTextArea();
        textArea.setEditable(false);
        add(new JScrollPane(textArea));

        setVisible(true);

        // Sunucu başlatılıyor
        startServer();
    }

    public void startServer() {
        try (ServerSocket serverSocket = new ServerSocket(1234)) {
            textArea.append("Sunucu başlatıldı, bağlantı bekleniyor...\n");

            // Bağlantıyı kabul et
            Socket socket = serverSocket.accept();
            textArea.append("Bağlantı kuruldu!\n");

            // Mesajı al
            BufferedReader reader = new BufferedReader(new InputStreamReader(socket.getInputStream()));
            String message;
            while ((message = reader.readLine()) != null) {
                textArea.append("Mesaj alındı: " + message + "\n");
            }

        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(ServerFrame::new);
    }
}
